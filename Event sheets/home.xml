<?xml version="1.0" encoding="utf-8" ?>
<c2eventsheet>
    <!--All the 'name' attributes are ignored by Construct 2 - they are there for readability only.-->
    <name>home</name>
    <events>
        <event-block>
            <conditions>
                <condition id="7" name="Cursor is over object" type="Mouse">
                    <param id="0" name="Object">button</param>
                </condition>
            </conditions>
            <actions>
                <action behavior="Sine" id="0" name="Set active" type="button">
                    <param id="0" name="State">1</param>
                </action>
                <action id="-16" name="Set opacity" type="button">
                    <param id="0" name="Opacity">100</param>
                </action>
                <action behavior="SineEx" id="0" name="Set active" type="logo">
                    <param id="0" name="State">0</param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="7" inverted="1" name="Cursor is over object" type="Mouse">
                    <param id="0" name="Object">button</param>
                </condition>
            </conditions>
            <actions>
                <action behavior="Sine" id="0" name="Set active" type="button">
                    <param id="0" name="State">0</param>
                </action>
                <action id="-16" name="Set opacity" type="button">
                    <param id="0" name="Opacity">50</param>
                </action>
                <action behavior="SineEx" id="0" name="Set active" type="logo">
                    <param id="0" name="State">1</param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="3" name="On touched object" type="Touch">
                    <param id="0" name="Object">button_play</param>
                </condition>
            </conditions>
            <actions>
                <action id="-3" name="Create object" type="System">
                    <param id="0" name="Object to create">bg_homeblur</param>
                    <param id="1" name="Layer">0</param>
                    <param id="2" name="X">0</param>
                    <param id="3" name="Y">0</param>
                </action>
                <action id="-3" name="Create object" type="System">
                    <param id="0" name="Object to create">button_close</param>
                    <param id="1" name="Layer">0</param>
                    <param id="2" name="X">636</param>
                    <param id="3" name="Y">99</param>
                </action>
                <action id="-3" name="Create object" type="System">
                    <param id="0" name="Object to create">button_arcade</param>
                    <param id="1" name="Layer">0</param>
                    <param id="2" name="X">380</param>
                    <param id="3" name="Y">244</param>
                </action>
                <action id="-3" name="Create object" type="System">
                    <param id="0" name="Object to create">button_timetrial</param>
                    <param id="1" name="Layer">0</param>
                    <param id="2" name="X">380</param>
                    <param id="3" name="Y">384</param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="3" name="On touched object" type="Touch">
                    <param id="0" name="Object">button_close</param>
                </condition>
            </conditions>
            <actions>
                <action id="-9" name="Destroy" type="bg_homeblur" />
                <action id="-9" name="Destroy" type="button_arcade" />
                <action id="-9" name="Destroy" type="button_timetrial" />
                <action id="-9" name="Destroy" type="button_close" />
            </actions>
        </event-block>
    </events>
</c2eventsheet>
